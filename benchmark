#!/bin/bash
# Simple benchmark to check that the performance is at least
# on par with a bash for loop

if [ ! -f "./repeater" ]; then
  go build .
fi

max_am=$1
cmd=$2

if [ -z "$max_am" ]; then
  max_am=10000
fi

if [ -z "$cmd" ]; then
  cmd="ls"
fi

function repeater_for_loop() {
  local n=$1
  shift
  local cmd="$@"
  for i in $(seq $n); do
    /bin/bash -c "$cmd" > /dev/null
  done
}

for ((i = 10; i <= $max_am; i="${i}0")); do
  echo "== am runs: $i"
  printf "repeater (go)"
  time ./repeater -n $i $cmd > /dev/null
  printf "repeater (go), 9 workers"
  time ./repeater -n $i -w 9 $cmd > /dev/null
  printf "repeater (for loop bash)"
  time repeater_for_loop $i $cmd > /dev/null
done


# Clean up the binary
rm repeater
